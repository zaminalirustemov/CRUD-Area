@model Services

<div class="container">
    <h1>Create Service</h1>
    <form method="post">
        <div class="mb-3">
            <label asp-for="Title" class="form-label">Title</label>
            <input asp-for="Title" class="form-control" placeholder="Title">
            <span asp-validation-for="Title" style="color:red"></span>
        </div>
         <div class="mb-3">
            <label asp-for="Description" class="form-label">Desc</label>
            <input asp-for="Description" class="form-control" placeholder="Desc">
            <span asp-validation-for="Description" style="color:red"></span>

        </div>
        <div class="mb-3">
            <label asp-for="IconClass" class="form-label">Icon</label>
            <input asp-for="IconClass" class="form-control" placeholder="Icon">
            <span asp-validation-for="IconClass" style="color:red"></span>

        </div>
        <button type="submit" class="btn btn-success">Create</button>
    </form>
</div>