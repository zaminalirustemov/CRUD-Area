@model List<Services>
@{
    int counter = 0;
}

<div class="container">
    <div class="d-flex" style="justify-content: space-around; align-items:center">
        <h1>Services</h1>
        <a class="btn btn-success" asp-action="Create" asp-controller="services">Create</a>
    </div>


    <table class="table table-striped table-dark">
        <thead>
            <tr>
                <th scope="col">№</th>
                <th scope="col">Id</th>
                <th scope="col">Icon</th>
                <th scope="col">Title</th>
                <th scope="col">Description</th>
                <th scope="col">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                counter++;
                <tr>

                    <th scope="row">@counter</th>
                    <td>@item.Id</td>
                    <td> <div class="icon">@Html.Raw(@item.IconClass)</div></td>
                    <td>@item.Title</td>
                    <td>@item.Description</td>
                    <td>
                        <a class="btn btn-primary" asp-action="edit" asp-controller="services" asp-route-id="@item.Id">Edit</a>
                    </td>
                    <td>

                        <a class="btn btn-danger" asp-action="delete" asp-controller="services" asp-route-id="@item.Id">Delete</a>
                    </td>

                </tr>
            }
        </tbody>
    </table>
</div>