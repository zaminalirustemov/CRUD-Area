@model Counts

<div class="container">
    <h1>Create Count</h1>
    <form method="post">
        <div class="mb-3">
            <label asp-for="Icon" class="form-label">Icon</label>
            <input asp-for="Icon" class="form-control" placeholder="Icon">
            <span asp-validation-for="Icon" style="color:red"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Number" class="form-label">Number</label>
            <input asp-for="Number" class="form-control" placeholder="Number">
            <span asp-validation-for="Number" style="color:red"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Title" class="form-label">Title</label>
            <input asp-for="Title" class="form-control" placeholder="Title">
            <span asp-validation-for="Title" style="color:red"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Description" class="form-label">Description</label>
            <input asp-for="Description" class="form-control" placeholder="Description">
            <span asp-validation-for="Description" style="color:red"></span>
        </div>
        <div class="mb-3">
            <label asp-for="RedirectUrl" class="form-label">RedirectUrl</label>
            <input asp-for="RedirectUrl" class="form-control" placeholder="RedirectUrl">
            <span asp-validation-for="RedirectUrl" style="color:red"></span>
        </div>
        <button type="submit" class="btn btn-success">Create</button>
    </form>
</div>